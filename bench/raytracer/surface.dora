class Surface {
    var color: Vec3;
    var kd: Float64;
    var ks: Float64;
    var shine: Float64;
    var kt: Float64;
    var ior: Float64;

    init() {
        self.color = Vec3(1.0, 0.0, 0.0);
        self.kd = 1.0;
        self.ks = 0.0;
        self.shine = 0.0;
        self.kt = 0.0;
        self.ior = 1.0;
    }

    fun toString() {
        return "Surface { color=" + color.toString() + " }";
    }
}