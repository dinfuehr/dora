{
	"name": "dora-lang",
	"displayName": "The Dora Language",
	"description": "",
	"version": "0.0.9",
	"repository": {
		"type": "git",
		"url": "https://github.com/dinfuehr/vscode-dora"
	},
	"publisher": "dora-lang",
	"engines": {
		"vscode": "^1.105.0"
	},
	"categories": [
		"Programming Languages"
	],
	"main": "./out/extension.js",
	"activationEvents": ["workspaceContains:*/dora-project.json"],
	"contributes": {
        "configuration": {
            "title": "Dora",
            "properties": {
                "dora.languageServer.path": {
                    "type": [
                        "string",
                        null
                    ],
                    "default": null,
                    "description": "Path to dora-language-server"
                },
                "dora.languageServer.args": {
                    "type": "string",
                    "default": "",
                    "description": "Additional command line arguments for the Dora language server"
                },
                "dora.formatting.enabled": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable document formatting"
                }
            }
        },
		"languages": [
			{
				"id": "dora",
				"extensions": [
					".dora"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "dora",
				"scopeName": "source.dora",
				"path": "./syntaxes/dora.tmLanguage.json"
			}
		],
		"commands": [
			{
			  "command": "dora-lang.ping",
			  "title": "Dora Ping"
			}
		  ]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	  },
	  "dependencies": {
		"vscode-languageclient": "^8.1.0"
	  },
	  "devDependencies": {
		"@types/vscode": "^1.105.0",
		"@types/mocha": "^10.0.1",
		"@types/node": "16.x",
		"@typescript-eslint/eslint-plugin": "^5.56.0",
		"@typescript-eslint/parser": "^5.56.0",
		"eslint": "^8.36.0",
		"mocha": "^10.2.0",
		"typescript": "^4.9.5",
		"@vscode/test-electron": "^2.3.0"
	  }
}
