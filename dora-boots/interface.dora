impl ConstPool {
    pub static fn new(): ConstPool {
        ConstPool(
            Vec[ConstPoolEntry]::new(),
        )
    }

    pub fn size(): Int64 {
        self.entries.size()
    }

    pub fn push(entry: ConstPoolEntry): ConstPoolId {
        let id = ConstPoolId(self.entries.size().toInt32());
        self.entries.push(entry);
        id
