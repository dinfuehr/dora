use std::io::{File, OpenFile};

use package::graph::Graph;
use package::compilation::CompilationInfo;

pub fn createHtmlWriter(): HtmlWriter {
    let file = File::create("ssa.html");
    let html = HtmlWriter(file);
    html.start();
    html
}

pub class HtmlWriter {
    file: OpenFile,
}

impl HtmlWriter {
    fn start() {
        self.file.writeString("<html>\n");
    }

    pub fn dump(ci: CompilationInfo, graph: Graph, text: String) {
        // TODO
    }

    pub fn close() {
        self.file.writeString("</html>\n");
        self.file.close();
    }
}
