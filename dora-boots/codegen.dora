    fn emitBreakpoint();
    fn emitProlog(stackSize: Int32);
    fn emitStackLimitCheck();
    fn emitSafepointCheck();

    fn finalize(): CodeDescriptor;

    fn registerName(register: Register): String;

    fn createLabel(): Label;
