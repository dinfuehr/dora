//= vm-args "--gc=swiper --gc-verify"

fun main() {
  let x = Foo(1I, Option[Foo]::None);
  std::forceMinorCollect();
  x.next = Option[Foo]::Some(Foo(2I, Option[Foo]::None));
  // Promote x to old generation. Make sure that
  // promoted objects with references to young generations
  // are updated too.
  std::forceMinorCollect();
  assert(x.next.getOrPanic().a == 2I);
  // Promote Foo(2I, Option[Foo]::None) into old generation and set
  // card to clean again.
  std::forceMinorCollect();
  assert(x.next.getOrPanic().a == 2I);
}

class Foo(let a: Int32, var next: Option[Foo])
