fun main() {
    test_multiple_ascii_chars();

    test_1byte();
    test_2bytes();
    test_3bytes();
    test_4bytes();

    test_invalid();
}

fun test_multiple_ascii_chars() {
    let bytes = Array[Byte](3);
    bytes.set(0, 'a'.toInt().toByte());
    bytes.set(1, 'b'.toInt().toByte());
    bytes.set(2, 'c'.toInt().toByte());

    let val = try! String::fromBytes(bytes);
    let it = val.codePoints();

    assert(it.hasNext() == true);
    assert(it.next() == 'a');
    assert(it.hasNext() == true);
    assert(it.next() == 'b');
    assert(it.hasNext() == true);
    assert(it.next() == 'c');
    assert(it.hasNext() == false);
}

fun test_1byte() {
    let bytes = Array[Byte](1);
    bytes.set(0, 0x24Y);

    let val = try! String::fromBytes(bytes);
    let it = val.codePoints();

    assert(it.hasNext() == true);
    assert(it.next() == try! 0x24.toChar());
    assert(it.hasNext() == false);
}

fun test_2bytes() {
    let bytes = Array[Byte](2);
    bytes.set(0, 0xC2Y);
    bytes.set(1, 0xA2Y);

    let val = try! String::fromBytes(bytes);
    let it = val.codePoints();

    assert(it.hasNext() == true);
    assert(it.next() == try! 0xA2.toChar());
    assert(it.hasNext() == false);
}

fun test_3bytes() {
    let bytes = Array[Byte](3);
    bytes.set(0, 0xE2Y);
    bytes.set(1, 0x82Y);
    bytes.set(2, 0xACY);

    let val = try! String::fromBytes(bytes);
    let it = val.codePoints();

    assert(it.hasNext() == true);
    assert(it.next() == try! 0x20AC.toChar());
    assert(it.hasNext() == false);
}

fun test_4bytes() {
    let bytes = Array[Byte](4);
    bytes.set(0, 0xF0Y);
    bytes.set(1, 0x90Y);
    bytes.set(2, 0x8DY);
    bytes.set(3, 0x88Y);

    let val = try! String::fromBytes(bytes);
    let it = val.codePoints();

    assert(it.hasNext() == true);
    assert(it.next() == try! 0x10348.toChar());
    assert(it.hasNext() == false);
}

fun test_invalid() {
    let bytes = Array[Byte](1);
    bytes.set(0, 0x80Y);

    do {
        try String::fromBytes(bytes);
        assert(false);
    } catch x: String {
        assert(true);
    }
}
