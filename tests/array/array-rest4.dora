fun main(): Unit {
    assert(sum_args(Foo(1i32), Foo(2i32)) == 3i32);
    assert(sum_args(Foo(7i32)) == 7i32);
    assert(sum_args() == 0i32);
}

fun sum_args(x: Foo...): Int32 {
    let mut result = 0i32;
    let mut idx = 0i64;
    
    while idx < x.size() {
        let foo = x(idx);
        result = result + foo.value;
        idx = idx + 1i64;
    }

    result
}

class Foo(value: Int32)
