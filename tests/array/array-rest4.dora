fun main() {
    assert(sum_args(Foo(1), Foo(2)) == 3);
    assert(sum_args(nil) == 0);
    assert(sum_args(Foo(7)) == 7);
    assert(sum_args() == 0);
}

fun sum_args(x: Foo...): Int32 {
    var result = 0;
    var idx = 0L;
    
    while idx < x.size() {
        let foo = x(idx);
        result = result + if foo === nil { 0 } else { foo.value };
        idx = idx + 1L;
    }

    result
}

class Foo(let value: Int32)
