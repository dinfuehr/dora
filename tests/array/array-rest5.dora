fun main() {
    assert(sum_args((1I, 2I), (3I, 4I)) == 10I);
    assert(sum_args() == 0I);
    assert(sum_args((0I, 1I)) == 1I);
}

fun sum_args(x: (Int32, Int32)...): Int32 {
    var result = 0I;
    var idx = 0L;

    while idx < x.size() {
        let elem = x(idx);
        result = result + elem.0 + elem.1;
        idx = idx + 1L;
    }

    result
}
