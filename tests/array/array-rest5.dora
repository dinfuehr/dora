fun main() {
    assert(sum_args((1, 2), (3, 4)) == 10);
    assert(sum_args() == 0);
    assert(sum_args((0, 1)) == 1);
}

fun sum_args(x: (Int32, Int32)...) -> Int32 {
    var result = 0;
    var idx = 0L;
    
    while idx < x.length() {
        let elem = x(idx.toInt32());
        result = result + elem.0 + elem.1;
        idx = idx + 1L;
    }

    result
}
