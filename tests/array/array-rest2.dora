fun main(): Unit {
    assert(sum_args(1i32, 2i32) == 3i32);
    assert(sum_args(7i32) == 7i32);
    assert(sum_args() == 0i32);
    assert(sum_args(1i32, 2i32, 3i32, 4i32, 5i32) == 15i32);
}

fun sum_args(x: Int32...): Int32 {
    var result = 0i32;
    var idx = 0i64;
    
    while idx < x.size() {
        result = result + x(idx);
        idx = idx + 1i64;
    }

    result
}
