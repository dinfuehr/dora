fun main() {
    assert(sum_args(1I, 2I) == 3I);
    assert(sum_args(7I) == 7I);
    assert(sum_args() == 0I);
    assert(sum_args(1I, 2I, 3I, 4I, 5I) == 15I);
}

fun sum_args(x: Int32...): Int32 {
    var result = 0I;
    var idx = 0L;
    
    while idx < x.size() {
        result = result + x(idx);
        idx = idx + 1L;
    }

    result
}
