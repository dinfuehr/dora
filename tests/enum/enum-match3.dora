fun main(): Unit {
    assert(value1(None[Int32]) == 0i32);
    assert(value1(Some[Int32](5i32)) == 5i32);

    assert(value2(Some[Int32](42i32)) == 42i32);
    assert(value2(None[Int32]) == 0i32);
}

fun value1(x: Option[Int32]): Int32 {
    match x {
        Some(a) => a,
        None => 0i32
    }
}

fun value2(x: Option[Int32]): Int32 {
    match x {
        None => 0i32,
        Some(a) => a
    }
}
