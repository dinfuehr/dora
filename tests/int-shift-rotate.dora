fn main() {
    let x = 1i32.shl(1i32);
    assert(x == 2i32);

    let x = 1i32 << 1i32;
    assert(x == 2i32);

    let x = 6i32.ashr(1i32);
    assert(x == 3i32);

    let x = 6i32 >> 1i32;
    assert(x == 3i32);

    let x = 12i32.lshr(2i32);
    assert(x == 3i32);

    let x = 12i32 >> 2i32;
    assert(x == 3i32);

    let x = (-12i32).rotateLeft(1i32);
    assert(x == -23i32);

    let x = (-12i32).rotateRight(1i32);
    assert(x == 2147483642i32);

    // rotate arg is masked to 5 bits:
    let x = (-12i32).rotateLeft(32i32);
    assert(x == -12i32);

    let x = (-12i32).rotateRight(32i32);
    assert(x == -12i32);

    let x = (-12i32).rotateLeft(-1i32);
    assert(x == 2147483642i32);

    let x = (-12i32).rotateRight(-1i32);
    assert(x == -23i32);
}
