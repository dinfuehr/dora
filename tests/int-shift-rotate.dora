//= cannon

fun main() {
    let x = 1I.shiftLeft(1I);
    assert(x == 2I);

    let x = 1I << 1I;
    assert(x == 2I);

    let x = 6I.shiftRightSigned(1I);
    assert(x == 3I);

    let x = 6I >> 1I;
    assert(x == 3I);

    let x = 12I.shiftRight(2I);
    assert(x == 3I);

    let x = 12I >> 2I;
    assert(x == 3I);

    let x = (-12I).rotateLeft(1I);
    assert(x == -23I);

    let x = (-12I).rotateRight(1I);
    assert(x == 2147483642I);

    // rotate arg is masked to 5 bits:
    let x = (-12I).rotateLeft(32I);
    assert(x == -12I);

    let x = (-12I).rotateRight(32I);
    assert(x == -12I);

    let x = (-12I).rotateLeft(-1I);
    assert(x == 2147483642I);

    let x = (-12I).rotateRight(-1I);
    assert(x == -23I);
}
