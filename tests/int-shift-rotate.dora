fun main(): Unit {
    let x = 1i32.shiftLeft(1i32);
    assert(x == 2i32);

    let x = 6i32.shiftRightSigned(1i32);
    assert(x == 3i32);

    let x = 12i32.shiftRight(2i32);
    assert(x == 3i32);

    let x = (-12i32).rotateLeft(1i32);
    assert(x == -23i32);

    let x = (-12i32).rotateRight(1i32);
    assert(x == 2147483642i32);

    // rotate arg is masked to 5 bits:
    let x = (-12i32).rotateLeft(32i32);
    assert(x == -12i32);

    let x = (-12i32).rotateRight(32i32);
    assert(x == -12i32);

    let x = (-12i32).rotateLeft(-1i32);
    assert(x == 2147483642i32);

    let x = (-12i32).rotateRight(-1i32);
    assert(x == -23i32);
}
