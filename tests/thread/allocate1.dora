class MyThread() extends std::Thread {
    @override fun run() {
        allocator();
        println("done");
    }
}

fun main() {
    var i = 0I;

    while i < 4I {
        let thread = MyThread();
        thread.start();
        i = i + 1I;
    }

    allocator();
    println("done");
}

fun allocator() {
    var i = 0I;

    while i < 10_000I {
        Foo();
        i = i + 1I;
    }
}

class Foo