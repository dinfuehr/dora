//= vm-args "--gc=copy"

fun main() {
    assert(f(true) == 1);
    assert(f(false) == 2);

    assert(g(true) == 1);
    assert(g(false) == 2);

    assert(h(true, 7) == "t7end");
    assert(h(false, 12) == "f12end");

    assert(i(true) == "1");
    assert(i(false) == "not one");
}

fun f(x: Bool): Int32 {
    if x { 1 } else { 2 }
}

fun g(x: Bool): Int32 {
    let ret = if x { 1 } else { 2 };

    ret
}

fun h(x: Bool, y: Int32): String {
    (if x { "t${y}" } else { "f${y}" }) + { forceCollect(); "end" }
}

fun i(x: Bool): String {
  let i = if x { 1 } else { return "not one"; };
  i.toString()
}